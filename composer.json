{
    "name": "azuriom/azuriom",
    "type": "project",
    "description": "Azuriom is an open-source game CMS based on Laravel and VueJS.",
    "keywords": [
        "cms",
        "azuriom",
        "laravel"
    ],
    "license": "proprietary",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-zip": "*",
        "chillerlan/php-qrcode": "^3.2",
        "fideloper/proxy": "^4.0",
        "funkjedi/composer-include-files": "^1.0",
        "google/recaptcha": "^1.2",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^2.0",
        "pragmarx/google2fa": "^6.0",
        "thedudeguy/rcon": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0"
    },
    "suggest": {
        "wikimedia/composer-merge-plugin": "This allow to merge the composer.json of the plugins in the main composer autoload"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "plugins/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-scripts": false
        },
        "include_files": [
            "app/base_helpers.php"
        ]
    },
    "autoload": {
        "psr-4": {
            "Azuriom\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan plugin:cache --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
